{
  "name": "splitsave",
  "version": "1.0.0",
  "description": "A collaborative finance app for couples to manage shared expenses and savings goals",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:performance": "lighthouse http://localhost:3000 --output=html --output-path=./lighthouse-report.html",
    "test:accessibility": "jest --testPathPattern=accessibility",
    "test:unit": "jest --testPathPattern=unit",
    "test:integration": "jest --testPathPattern=integration",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:coverage",
    "db:types": "supabase gen types typescript --project-id YOUR_PROJECT_ID > lib/supabase-types.ts",
    "vercel-build": "next build",
    "build:clean": "./scripts/build.sh",
    "deploy": "./scripts/deploy.sh",
    "analyze": "ANALYZE=true npm run build",
    "build:analyze": "ANALYZE=true npm run build",
    "prepare": "husky install"
  },
  "dependencies": {
    "@next/font": "^14.2.15",
    "@supabase/auth-helpers-nextjs": "^0.8.7",
    "@supabase/auth-helpers-react": "^0.4.2",
    "@supabase/supabase-js": "^2.38.4",
    "bcryptjs": "^2.4.3",
    "canvas": "^3.2.0",
    "framer-motion": "^12.23.12",
    "jsonwebtoken": "^9.0.2",
    "next": "^14.0.0",
    "next-themes": "^0.4.6",
    "react": "^18.0.0",
    "react-dom": "^18.0.0",
    "react-hot-toast": "^2.6.0",
    "socket.io": "^4.7.4",
    "socket.io-client": "^4.7.4",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^7.0.2",
    "@playwright/test": "^1.55.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.0",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/node": "^20.10.0",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@types/testing-library__jest-dom": "^5.14.9",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.0.0",
    "eslint-config-next": "^14.0.0",
    "eslint-plugin-jest": "^27.6.0",
    "eslint-plugin-testing-library": "^7.1.0",
    "husky": "^8.0.3",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lighthouse": "^11.6.0",
    "postcss": "^8.4.32",
    "sharp": "^0.34.3",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "webpack-bundle-analyzer": "^4.10.2"
  }
}
